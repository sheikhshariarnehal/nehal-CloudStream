{
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "build/**",
      "gradle/**",
      "*.gradle*",
      "*.md",
      "src/**"
    ],
    "headers": [
      {
        "source": "**/*.json",
        "headers": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Access-Control-Allow-Origin",
            "value": "*"
          },
          {
            "key": "Cache-Control",
            "value": "public, max-age=300"
          }
        ]
      }
    ],
    "rewrites": [
      {
        "source": "/plugins",
        "destination": "/plugins.json"
      },
      {
        "source": "/repository",
        "destination": "/plugins.json"
      }
    ]
  }
}
